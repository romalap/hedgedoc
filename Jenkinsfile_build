pipeline {
  environment {
    registry = "devvetton/hedgedoc"
    registryCredential = 'dockerhub'
  }
  parameters {
    choice(name: 'VERSION', choices: ['master', '1.8.2', '1.8.1'], description: 'Pick the VERSION')
    }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        checkout scm
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build("hedgedoc:${params.VERSION}", "--build-arg VERSION=${params.VERSION} --network=host .")
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( 'registry', registryCredential ) {
          dockerImage.push()
          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh """
        docker rmi \$(docker images -f dangling=true -q)
        """
      }
    }
  }
}